            <colspec colwidth="30*"/>

            <colspec colwidth="44*"/>

            <colspec colwidth="18*"/>

            <tbody valign="top">
              <row>
                <?dblatex bgcolor="darkerteal"?>

                <entry>Dimensions</entry>

                <entry>Idées de proposition</entry>

                <entry>Synthétiser</entry>
              </row>

              <row>
                <?dblatex bgcolor="verylightgrey"?>

                <entry><itemizedlist spacing="compact">
                    <listitem>
                      <para>financement ?</para>
                    </listitem>

                    <listitem>
                      <para>calendrier</para>
                    </listitem>

                    <listitem>
                      <para>gros/petits donateurs</para>
                    </listitem>

                    <listitem>
