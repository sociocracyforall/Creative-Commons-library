<chapter version="5.0" xmlns="http://docbook.org/ns/docbook"
         xmlns:xlink="http://www.w3.org/1999/xlink"
         xmlns:ns6="http://docbook.org/ns/transclusion"
         xmlns:ns5="http://www.w3.org/1998/Math/MathML"
